{
  "name": "telecheck-dev",
  "version": "1.0.0",
  "description": "Production-grade Telecheck healthcare management platform",
  "type": "module",
  "scripts": {
    "dev": "echo 'Choose a workstream: cd workstream/<workstream-name> && pnpm run dev'",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "test:coverage": "pnpm run --recursive test:coverage",
    "lint": "pnpm run --recursive lint",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean",
    "setup": "pnpm install --recursive",
    "workstreams": "git worktree list"
  },
  "workspaces": [
    "workstream/*",
    "shared/*"
  ],
  "devDependencies": {
    "@types/node": "^22.5.5",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}