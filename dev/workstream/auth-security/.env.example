# Environment Configuration
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MS=1800000

# Server Configuration
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_LOG_FILE=logs/audit.log

# MFA Configuration
MFA_SERVICE_NAME=Auth-Security-Service

# Email Configuration
SMTP_HOST=mail.telecheckhealth.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@telecheckhealth.com
SMTP_PASS=your_email_password_here
EMAIL_FROM=Telecheck Health <noreply@telecheckhealth.com>
FRONTEND_URL=http://localhost:5173

# Email Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=50
EMAIL_RATE_LIMIT_PER_DAY=200

# Email Token Configuration
EMAIL_VERIFICATION_TOKEN_EXPIRY=24h
PASSWORD_RESET_TOKEN_EXPIRY=6h