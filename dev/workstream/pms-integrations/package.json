{
  "name": "@spark-pms/integrations",
  "version": "1.0.0",
  "description": "Comprehensive healthcare integrations platform with FHIR compliance and EHR connectivity",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:integrations": "concurrently \"npm run dev\" \"npm run test:watch\" \"npm run fhir:server\"",
    "build": "tsc && npm run build:fhir",
    "build:fhir": "node scripts/build-fhir-resources.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integrations": "npm run test:fhir && npm run test:ehr && npm run test:payer && npm run test:payment",
    "test:fhir": "vitest run --config vitest.fhir.config.ts",
    "test:ehr": "vitest run --config vitest.ehr.config.ts",
    "test:payer": "vitest run --config vitest.payer.config.ts",
    "test:payment": "vitest run --config vitest.payment.config.ts",
    "test:e2e": "playwright test",
    "test:security": "npm run test:hipaa && npm run test:pci",
    "test:hipaa": "node scripts/hipaa-compliance-test.js",
    "test:pci": "node scripts/pci-compliance-test.js",
    "setup:fhir": "node scripts/setup-fhir-server.js",
    "fhir:server": "tsx src/fhir/server.ts",
    "fhir:validate": "node scripts/validate-fhir-compliance.js",
    "compliance:validate": "npm run fhir:validate && npm run test:security",
    "performance:test": "artillery run tests/performance/load-test.yml",
    "security:scan": "npm audit && snyk test",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production npm start",
    "migrate": "tsx src/database/migrate.ts",
    "seed": "tsx src/database/seed.ts"
  },
  "keywords": [
    "healthcare",
    "FHIR",
    "EHR",
    "integrations",
    "interoperability",
    "HIPAA",
    "PCI-DSS",
    "Epic",
    "Cerner",
    "clearinghouse",
    "payment-processing"
  ],
  "author": "Spark PMS Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@types/fhir": "^0.0.36",
    "fhirpath": "^3.9.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "axios": "^1.6.0",
    "oauth2-server": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "redis": "^4.6.10",
    "bull": "^4.12.0",
    "stripe": "^14.5.0",
    "square": "^30.0.0",
    "xml2js": "^0.6.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "pdf-parse": "^1.1.1",
    "archiver": "^6.0.1",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^7.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "joi": "^17.11.0",
    "ajv": "^8.12.0",
    "jsonschema": "^1.4.1",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2",
    "ioredis": "^5.3.2",
    "mongodb": "^6.2.0",
    "mongoose": "^8.0.0",
    "pg": "^8.11.3",
    "mysql2": "^3.6.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.201",
    "@types/xml2js": "^0.4.14",
    "@types/multer": "^1.4.9",
    "@types/archiver": "^6.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "typescript": "^5.2.2",
    "tsx": "^4.1.0",
    "vitest": "^0.34.6",
    "@vitest/coverage-c8": "^0.33.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "msw": "^2.0.0",
    "nock": "^13.4.0",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spark-pms/integrations.git"
  },
  "bugs": {
    "url": "https://github.com/spark-pms/integrations/issues"
  },
  "homepage": "https://github.com/spark-pms/integrations#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run compliance:validate"
    }
  }
}