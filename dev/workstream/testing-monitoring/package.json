{
  "name": "testing-monitoring-workstream",
  "version": "1.0.0",
  "description": "Comprehensive testing framework and production monitoring with performance benchmarks",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:load": "k6 run tests/load/performance.js",
    "test:load:stress": "k6 run tests/load/stress-test.js",
    "test:load:spike": "k6 run tests/load/spike-test.js",
    "test:security": "zap-baseline.py -t http://localhost:3000",
    "test:all": "pnpm run test:coverage && pnpm run test:e2e && pnpm run test:load",
    "coverage:report": "tsx scripts/coverage-report.ts",
    "monitor:dev": "docker-compose up prometheus grafana",
    "monitor:stop": "docker-compose down",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "testing",
    "monitoring",
    "observability",
    "performance",
    "tdd",
    "ci/cd"
  ],
  "author": "Spark Den Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}