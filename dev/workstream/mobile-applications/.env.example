# API Configuration
API_BASE_URL=https://api.sparkden-healthcare.com
API_VERSION=v1
API_TIMEOUT=30000

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
REFRESH_TOKEN_EXPIRY=7d
ACCESS_TOKEN_EXPIRY=1h

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=spark-den-healthcare.firebaseapp.com
FIREBASE_PROJECT_ID=spark-den-healthcare
FIREBASE_STORAGE_BUCKET=spark-den-healthcare.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Analytics
ANALYTICS_TRACKING_ID=your-analytics-id
CRASHLYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Security
ENCRYPTION_KEY=your-encryption-key
BIOMETRIC_ENABLED=true
SESSION_TIMEOUT=30

# HIPAA Compliance
AUDIT_LOGGING_ENABLED=true
DATA_ENCRYPTION_ENABLED=true
PHI_MASKING_ENABLED=true

# Development
DEBUG_MODE=true
FLIPPER_ENABLED=true
REACTOTRON_ENABLED=true

# Code Push
CODEPUSH_DEPLOYMENT_KEY_IOS=your-ios-deployment-key
CODEPUSH_DEPLOYMENT_KEY_ANDROID=your-android-deployment-key

# Feature Flags
TELEMEDICINE_ENABLED=true
WEARABLE_INTEGRATION_ENABLED=true
VOICE_TO_TEXT_ENABLED=true
OCR_ENABLED=true