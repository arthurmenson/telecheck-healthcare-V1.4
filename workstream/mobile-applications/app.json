{
  "expo": {
    "name": "Spark Den Healthcare",
    "slug": "spark-den-healthcare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sparkden.healthcare",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera for document scanning and medical imaging",
        "NSMicrophoneUsageDescription": "This app uses microphone for voice-to-text clinical documentation",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication",
        "NSLocationWhenInUseUsageDescription": "This app uses location for finding nearby healthcare facilities",
        "NSHealthShareUsageDescription": "This app uses HealthKit to read health data for comprehensive patient care",
        "NSHealthUpdateUsageDescription": "This app uses HealthKit to update health data for patient monitoring"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.sparkden.healthcare",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACTIVITY_RECOGNITION",
        "BODY_SENSORS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "WAKE_LOCK",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      "expo-local-authentication",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": ["./assets/notification.wav"]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos for medical document uploads",
          "cameraPermission": "The app accesses your camera for medical document scanning"
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "spark-den-healthcare-mobile"
      }
    },
    "owner": "spark-den-healthcare",
    "scheme": "spark-den-healthcare",
    "updates": {
      "url": "https://u.expo.dev/spark-den-healthcare-mobile"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}