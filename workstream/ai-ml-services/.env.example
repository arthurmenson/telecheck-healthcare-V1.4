# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spark_den_ai_ml
DB_USER=ai_ml_user
DB_PASSWORD=secure_password

# AI/ML Configuration
MODEL_STORAGE_PATH=./models
TENSORFLOW_BACKEND=cpu
ACCURACY_THRESHOLD=0.95
PERFORMANCE_THRESHOLD_MS=30000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Monitoring Configuration
PROMETHEUS_PORT=9090
LOG_LEVEL=info
METRICS_ENABLED=true

# HIPAA Compliance
AUDIT_LOG_ENABLED=true
DATA_ENCRYPTION_ENABLED=true
ACCESS_LOG_RETENTION_DAYS=2555  # 7 years as required by HIPAA

# External APIs
HEALTHCARE_API_BASE_URL=https://api.healthcare.example.com
HEALTHCARE_API_KEY=your-api-key

# Bias Detection Configuration
BIAS_CHECK_ENABLED=true
FAIRNESS_THRESHOLD=0.8
DEMOGRAPHIC_PARITY_THRESHOLD=0.1

# Model Drift Configuration
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.1
DRIFT_CHECK_INTERVAL_HOURS=24