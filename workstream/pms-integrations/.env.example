# Server Configuration
NODE_ENV=development
PORT=8080
HOST=localhost
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/pms_integrations"
REDIS_URL="redis://localhost:6379"
MONGODB_URL="mongodb://localhost:27017/pms_integrations"

# FHIR Server Configuration
FHIR_SERVER_URL="http://localhost:8080/fhir"
FHIR_VERSION="4.0.1"
FHIR_TERMINOLOGY_SERVER="https://tx.fhir.org"
SMART_ON_FHIR_ENABLED=true

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"
OAUTH_CLIENT_ID="your-oauth-client-id"
OAUTH_CLIENT_SECRET="your-oauth-client-secret"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Epic Integration
EPIC_CLIENT_ID="your-epic-client-id"
EPIC_CLIENT_SECRET="your-epic-client-secret"
EPIC_SANDBOX_URL="https://fhir.epic.com/interconnect-fhir-oauth"
EPIC_PROD_URL="https://fhir.epic.com/interconnect-fhir-oauth"

# Cerner Integration
CERNER_CLIENT_ID="your-cerner-client-id"
CERNER_CLIENT_SECRET="your-cerner-client-secret"
CERNER_SANDBOX_URL="https://fhir-ehr-code.cerner.com/r4"
CERNER_PROD_URL="https://fhir-ehr.cerner.com/r4"

# Allscripts Integration
ALLSCRIPTS_APP_NAME="your-allscripts-app-name"
ALLSCRIPTS_USERNAME="your-allscripts-username"
ALLSCRIPTS_PASSWORD="your-allscripts-password"
ALLSCRIPTS_SANDBOX_URL="https://sandbox.allscripts.com"

# Payer & Clearinghouse Integration
CHANGE_HEALTHCARE_CLIENT_ID="your-change-healthcare-client-id"
CHANGE_HEALTHCARE_SECRET="your-change-healthcare-secret"
CHANGE_HEALTHCARE_URL="https://api.changehealthcare.com"

WAYSTAR_CLIENT_ID="your-waystar-client-id"
WAYSTAR_SECRET="your-waystar-secret"
WAYSTAR_URL="https://api.waystar.com"

AVAILITY_CLIENT_ID="your-availity-client-id"
AVAILITY_SECRET="your-availity-secret"
AVAILITY_URL="https://api.availity.com"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

SQUARE_APPLICATION_ID="your-square-application-id"
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_WEBHOOK_SIGNATURE_KEY="your-square-webhook-key"
SQUARE_ENVIRONMENT="sandbox"

# Banking & ACH
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret"
PLAID_ENVIRONMENT="sandbox"

DWOLLA_KEY="your-dwolla-key"
DWOLLA_SECRET="your-dwolla-secret"
DWOLLA_ENVIRONMENT="sandbox"

# Health Information Exchange
COMMONWELL_CLIENT_ID="your-commonwell-client-id"
COMMONWELL_SECRET="your-commonwell-secret"
COMMONWELL_URL="https://api.commonwellalliance.org"

DIRECT_TRUST_CERT_PATH="/path/to/direct-trust-certificate.p12"
DIRECT_TRUST_CERT_PASSWORD="your-certificate-password"

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn"
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"

# Performance & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=3600

# Testing Configuration
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/pms_integrations_test"
MOCK_EXTERNAL_APIS=true
E2E_TEST_TIMEOUT=30000

# Compliance & Security
HIPAA_AUDIT_ENABLED=true
PCI_COMPLIANCE_MODE=true
AUDIT_LOG_RETENTION_DAYS=2555
SECURITY_SCAN_ENABLED=true

# Integration Feature Flags
EPIC_INTEGRATION_ENABLED=true
CERNER_INTEGRATION_ENABLED=true
ALLSCRIPTS_INTEGRATION_ENABLED=true
CHANGE_HEALTHCARE_ENABLED=true
WAYSTAR_ENABLED=true
AVAILITY_ENABLED=true
STRIPE_ENABLED=true
SQUARE_ENABLED=true
ACH_PROCESSING_ENABLED=true
COMMONWELL_ENABLED=true
DIRECT_TRUST_ENABLED=true