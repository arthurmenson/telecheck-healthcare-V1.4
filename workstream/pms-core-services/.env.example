# PMS Core Services Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spark_den_pms
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Revenue Cycle Configuration
REVENUE_CYCLE_OPTIMIZATION_ENABLED=true
REVENUE_IMPROVEMENT_TARGET=20
MANUAL_TASK_REDUCTION_TARGET=40

# Claims Processing Configuration
CLAIMS_AUTO_SUBMISSION_ENABLED=true
CLAIMS_VALIDATION_THRESHOLD=0.95
MAX_CLAIMS_BATCH_SIZE=100

# Payment Processing Configuration
PAYMENT_PROCESSOR_API_KEY=your-payment-processor-api-key
PAYMENT_PROCESSOR_SECRET=your-payment-processor-secret
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Third-party Integrations
CLEARINGHOUSE_API_URL=https://api.clearinghouse.com
CLEARINGHOUSE_API_KEY=your-clearinghouse-api-key
INSURANCE_VERIFICATION_API_URL=https://api.insurance-verification.com
INSURANCE_VERIFICATION_API_KEY=your-insurance-api-key

# Monitoring and Analytics
PERFORMANCE_MONITORING_ENABLED=true
ANALYTICS_ENDPOINT=https://analytics.sparkden.com
UPTIME_REQUIREMENT=99.99
RESPONSE_TIME_TARGET=100

# HIPAA Compliance
HIPAA_COMPLIANCE_MODE=strict
AUDIT_LOGGING_ENABLED=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/pms-core-services.log